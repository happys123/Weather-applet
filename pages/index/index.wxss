.location-wrapper{
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)!important;
  border: none!important;
  padding: 0!important;
}
 .location{
  display: flex;
  justify-content: center;
  align-items: center;
}
 .location-icon{
  margin-right: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
 .location-tips{
  margin-top: 10rpx;
  text-align: center;
  height: 42rpx;
}
.temp {
   text-align: center;
   font-size: 200rpx;
   line-height: 280rpx;
   opacity: 0.8;
}
.weather {
  font-size: 40rpx;
  text-align: center;
  line-height: 56rpx;
  opacity: 0.5;
}
.weather-wrapper {
  padding-top: 20rpx;
  padding-bottom: 250rpx;
  position: relative;
}
.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.day-weather {
  display: flex;
  align-items: center;
  position: absolute;
  bottom:0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}
 .temp-text {
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}
 .arrow-icon {
  width: 13rpx;
  height: 24rpx;
}
.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}
.timetips-icon {
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
.forecast-list {
  display: flex;
}
.forecast-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
  width: 120rpx;
}
.forecast-item {
  font-size: 30rpx;
  line-height: 42rpx;
}
.forecast-weather {
  width: 60rpx;
  height: 60rpx;
  margin-top: 50rpx;
}
.forecast-temp {
  font-size: 40rpx;
  line-height: 56rpx;
  margin-top: 46rpx;
}